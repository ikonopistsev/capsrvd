/var/log/capsrvd/*.txt {
    weekly
    missingok
    rotate 52
    compress
    delaycompress
    notifempty
    create 644 capsrvd capsrvd
    sharedscripts
    postrotate
    # if you have pid
    #kill -s 1 `cat /var/run/capsrvd.pid`
    # or systemd
    kill -s 1 `lsof -t /var/log/capsrvd/*.txt*`
    endscript
}
